// hash based 3d value noise
float noise(in float3 x)
{
	float3 p = floor(x);
	float3 f = frac(x);

	f = f*f*(3.0 - 2.0 * f);
	float n = p.x + p.y*57.0 + 113.0*p.z;
	return lerp(
			lerp(
				lerp(hash3d1(n + 0.0), hash3d1(n + 1.0), f.x),
				lerp(hash3d1(n + 57.0), hash3d1(n + 58.0), f.x),
				f.y),
			lerp(
				lerp(hash3d1(n + 113.0), hash3d1(n + 114.0), f.x),
				lerp(hash3d1(n + 170.0), hash3d1(n + 171.0), f.x),
				f.y),
			f.z);
}

//------------------------------------------------------------------------
float Cells(in vec3 p, in float numCells)
{
	p *= numCells;
	float d = 1.0e10;
	for (int xo = -1; xo <= 1; xo++)
	{
		for (int yo = -1; yo <= 1; yo++)
		{
            for (int zo = -1; zo <= 1; zo++)
            {
                vec3 tp = floor(p) + vec3(xo, yo, zo);
                tp = p - tp - noise(mod(tp, numCells / TILES));
                d = min(d, dot(tp, tp));
            }
		}
	}
    float f = mix(0.0, 0.6, noise(p * 5.0));
	return smoothstep(-4.0, 6.0, 1.0 - d  * 3.7 + f);
}

float GenerateNoise3D_11(vec3 p){
	float c0 = Cells(p, NUM_CELLS);
	float c1 = Cells(p * 2.0, NUM_CELLS);
	float c2 = Cells(p * 4.0, NUM_CELLS);
	float c3 = Cells(p * 8.0, NUM_CELLS);
    return (c0 * ( ( 1.0 - c1) + c2 + c3) );
}

float GenerateNoise3D_12(vec3 p) {
	const float freq = 4.0f;
	float pfbm= mix(1., perlinfbm(vec3(p), 4., 7), .5);
    pfbm = abs(pfbm * 2. - 1.); // billowy perlin noise
	vec4 col;
	col.g += GenerateNoise3D_9(p, freq);
    col.b += GenerateNoise3D_9(p, freq*2.);
    col.a += GenerateNoise3D_9(p, freq*4.);
    col.r += remap(pfbm, 0., 1., col.g, 1.); // perlin-worley
	float perlinWorley = col.x;
	// worley fbms with different frequencies
    vec3 worley = col.yzw;
    float wfbm = worley.x * .625 +
        		 worley.y * .125 +
        		 worley.z * .25; 
    
    // cloud shape modeled after the GPU Pro 7 chapter
    float cloud = remap(perlinWorley, wfbm - 1., 1., 0., 1.);
    cloud = remap(cloud, .85, 1., 0., 1.); // fake cloud coverage
	return cloud;
}

